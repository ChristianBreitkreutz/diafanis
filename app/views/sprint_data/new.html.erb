<h1>new</h1>

<%= button_to "back to overview", sprint_data_path, method: :get %>


<%= simple_form_for(@sprint_date, url: sprint_data_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date %>
  </div>
  <%= f.simple_fields_for :sprint_data_columns do |column| %>
    <p>
      <%= column.object.name %>
    <%= column.input :name, :as => :hidden, :input_html => { :value => column.object.name } %>
    <%= column.input :ticket_count %>
    <%= column.input :story_points %>
    </p>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>